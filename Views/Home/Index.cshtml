<div class="row no-gutters m-3">
    <div class="card col mx-auto shadow">
        <div class="card-header text-center">
            <h3 class="m-0">Get a Quote Now!</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("SendForm", "Home", FormMethod.Post))
            {
                <div class="row">
                    <div class="form-group col">
                        <span>First Name</span>
                        <input name="FirstName" type="text" class="form-control" />
                    </div>
                    <div class="form-group col">
                        <span>Last Name</span>
                        <input name="LastName" type="text" class="form-control" />
                    </div>
                    <div class="form-group col">
                        <span>Email</span>
                        <input name="EmailAddress" type="email" class="form-control" />
                    </div>
                    <div class="form-group col">
                        <span>Date of Birth</span>
                        <input name="DateOfBirth" type="date" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <span>Car Year</span>
                        <input name="CarYear" type="number" class="form-control" value="2018" />
                    </div>
                    <div class="form-group col">
                        <span>Car Make</span>
                        <input name="CarMake" type="text" class="form-control" />
                    </div>
                    <div class="form-group col">
                        <span>Car Model</span>
                        <input name="CarModel" type="text" class="form-control" />
                    </div>
                </div>
                <div class="row align-content-between">
                    <div class="form-group col-4">
                        <span>How many speeding tickets have you had?</span>
                        <input name="SpeedTickets" type="number" class="form-control" value="0" />
                    </div>
                    <div class="form-group col">
                        <span class="p-2">Have you ever had a DUI?</span>
                        @Html.CheckBox("Dui")
                    </div>
                    <div class="form-group col-4 btn-group-vertical btn-group-toggle" data-toggle="buttons">
                        <span>What kind of coverage?</span>
                        <select name="Coverage" class="custom-select">
                            <option value="Full">Full Coverage</option>
                            <option value="Liability">Liability</option>
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            }
        </div>
            </div>
</div>


